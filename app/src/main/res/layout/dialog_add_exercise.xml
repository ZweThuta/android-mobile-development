<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#0D0D0D"
    android:padding="24dp">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="44dp"
            android:layout_height="44dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#1A1A1A"
            android:layout_marginEnd="14dp">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@android:drawable/ic_menu_sort_by_size"
                android:contentDescription="Exercise icon"
                android:tint="#FFFFFF"
                android:layout_gravity="center" />
        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Exercise"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:letterSpacing="0.01" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Define sets, reps and instructions"
                android:textSize="13sp"
                android:textColor="#999999"
                android:fontFamily="sans-serif-light"
                android:layout_marginTop="2dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Exercise Name -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilExerciseName"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Exercise Name"
        app:hintTextColor="#999999"
        app:boxStrokeColor="#333333"
        app:boxStrokeWidth="1dp"
        app:boxCornerRadiusTopStart="14dp"
        app:boxCornerRadiusTopEnd="14dp"
        app:boxCornerRadiusBottomStart="14dp"
        app:boxCornerRadiusBottomEnd="14dp"
        app:boxBackgroundColor="#1A1A1A"
        app:startIconDrawable="@android:drawable/ic_menu_myplaces"
        app:startIconTint="#999999"
        app:layout_constraintTop_toBottomOf="@+id/headerLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etExerciseName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textColorHint="#666666"
            android:textSize="16sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Instructions -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilInstructions"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Instructions"
        app:hintTextColor="#999999"
        app:boxStrokeColor="#333333"
        app:boxStrokeWidth="1dp"
        app:boxCornerRadiusTopStart="14dp"
        app:boxCornerRadiusTopEnd="14dp"
        app:boxCornerRadiusBottomStart="14dp"
        app:boxCornerRadiusBottomEnd="14dp"
        app:boxBackgroundColor="#1A1A1A"
        app:startIconDrawable="@android:drawable/ic_menu_view"
        app:startIconTint="#999999"
        app:layout_constraintTop_toBottomOf="@+id/tilExerciseName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etInstructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:maxLines="5"
            android:textColor="#FFFFFF"
            android:textColorHint="#666666"
            android:textSize="16sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Sets and Reps Section Label -->
    <TextView
        android:id="@+id/setsRepsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sets &amp; Reps"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:letterSpacing="0.02"
        app:layout_constraintTop_toBottomOf="@+id/tilInstructions"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp" />

    <!-- Sets and Reps Row -->
    <LinearLayout
        android:id="@+id/setsRepsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/setsRepsLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilSets"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Sets"
            app:hintTextColor="#999999"
            app:boxStrokeColor="#333333"
            app:boxStrokeWidth="1dp"
            app:boxCornerRadiusTopStart="14dp"
            app:boxCornerRadiusTopEnd="14dp"
            app:boxCornerRadiusBottomStart="14dp"
            app:boxCornerRadiusBottomEnd="14dp"
            app:boxBackgroundColor="#1A1A1A"
            app:startIconDrawable="@android:drawable/ic_menu_sort_by_size"
            app:startIconTint="#999999">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etSets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textColor="#FFFFFF"
                android:textColorHint="#666666"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilReps"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Reps"
            app:hintTextColor="#999999"
            app:boxStrokeColor="#333333"
            app:boxStrokeWidth="1dp"
            app:boxCornerRadiusTopStart="14dp"
            app:boxCornerRadiusTopEnd="14dp"
            app:boxCornerRadiusBottomStart="14dp"
            app:boxCornerRadiusBottomEnd="14dp"
            app:boxBackgroundColor="#1A1A1A"
            app:startIconDrawable="@android:drawable/ic_menu_recent_history"
            app:startIconTint="#999999"
            android:layout_marginStart="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etReps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textColor="#FFFFFF"
                android:textColorHint="#666666"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <!-- Add Image Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAddImage"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:text="Add Image (Optional)"
        android:textSize="15sp"
        android:textColor="#FFFFFF"
        app:backgroundTint="#1A1A1A"
        app:cornerRadius="14dp"
        app:elevation="0dp"
        app:strokeWidth="1dp"
        app:strokeColor="#333333"
        app:icon="@android:drawable/ic_menu_camera"
        app:iconTint="#FFFFFF"
        app:iconGravity="textStart"
        app:layout_constraintTop_toBottomOf="@+id/setsRepsLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Divider -->
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#1A1A1A"
        app:layout_constraintTop_toBottomOf="@+id/btnAddImage"
        android:layout_marginTop="24dp" />

    <!-- Action Buttons -->
    <LinearLayout
        android:id="@+id/actionButtonsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:text="Cancel"
            android:textSize="15sp"
            android:textColor="#999999"
            app:cornerRadius="14dp"
            app:strokeColor="#333333"
            app:strokeWidth="1dp"
            android:layout_marginEnd="12dp"
            android:minWidth="100dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSave"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:text="Save Exercise"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#000000"
            app:backgroundTint="#FFFFFF"
            app:cornerRadius="14dp"
            app:elevation="0dp"
            app:icon="@android:drawable/ic_menu_save"
            app:iconTint="#000000" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
