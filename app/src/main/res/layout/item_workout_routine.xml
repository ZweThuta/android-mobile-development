<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="20dp"
    app:cardElevation="0dp"
    app:strokeWidth="1dp"
    app:strokeColor="#333333"
    app:cardBackgroundColor="#0D0D0D">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <!-- Routine Image (if available) -->
        <ImageView
            android:id="@+id/ivRoutineImage"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:background="#1A1A1A"
            android:contentDescription="Workout routine image"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Gradient Background for Header -->
        <View
            android:id="@+id/gradientHeader"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/card_gradient_black"
            app:layout_constraintTop_toBottomOf="@+id/ivRoutineImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Routine Name -->
        <TextView
            android:id="@+id/tvRoutineName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Workout Routine"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:maxLines="2"
            android:ellipsize="end"
            android:letterSpacing="0.01"
            app:layout_constraintTop_toTopOf="@+id/gradientHeader"
            app:layout_constraintStart_toStartOf="@+id/gradientHeader"
            app:layout_constraintEnd_toStartOf="@+id/cbCompleted"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp" />

        <!-- Completed Checkbox -->
        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/cbCompleted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Done"
            android:textColor="#CCCCCC"
            app:buttonTint="#FFFFFF"
            app:layout_constraintTop_toTopOf="@+id/gradientHeader"
            app:layout_constraintEnd_toEndOf="@+id/gradientHeader"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp" />

        <!-- Description -->
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="14sp"
            android:textColor="#999999"
            android:fontFamily="sans-serif-light"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@+id/gradientHeader"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

        <!-- Action Buttons Row 1: Schedule & Edit -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSchedule"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:text="Schedule"
            android:textSize="13sp"
            android:textColor="#000000"
            app:backgroundTint="#FFFFFF"
            app:cornerRadius="12dp"
            app:elevation="0dp"
            app:icon="@android:drawable/ic_menu_today"
            app:iconTint="#000000"
            app:iconGravity="textStart"
            app:iconPadding="4dp"
            app:layout_constraintTop_toBottomOf="@+id/tvDescription"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnEdit"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEdit"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:text="Edit"
            android:textSize="13sp"
            android:textColor="#FFFFFF"
            app:backgroundTint="#1A1A1A"
            app:cornerRadius="12dp"
            app:elevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="#333333"
            app:icon="@android:drawable/ic_menu_edit"
            app:iconTint="#FFFFFF"
            app:iconGravity="textStart"
            app:iconPadding="4dp"
            app:layout_constraintTop_toTopOf="@+id/btnSchedule"
            app:layout_constraintStart_toEndOf="@+id/btnSchedule"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Action Buttons Row 2: Delegate & Complete -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDelegate"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:text="Delegate"
            android:textSize="13sp"
            android:textColor="#FFFFFF"
            app:backgroundTint="#1A1A1A"
            app:cornerRadius="12dp"
            app:elevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="#333333"
            app:icon="@android:drawable/ic_menu_send"
            app:iconTint="#FFFFFF"
            app:iconGravity="textStart"
            app:iconPadding="4dp"
            app:layout_constraintTop_toBottomOf="@+id/btnSchedule"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnComplete"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnComplete"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:text="Complete"
            android:textSize="13sp"
            android:textColor="#000000"
            app:backgroundTint="#FFFFFF"
            app:cornerRadius="12dp"
            app:elevation="0dp"
            app:icon="@android:drawable/checkbox_on_background"
            app:iconTint="#000000"
            app:iconGravity="textStart"
            app:iconPadding="4dp"
            app:layout_constraintTop_toTopOf="@+id/btnDelegate"
            app:layout_constraintStart_toEndOf="@+id/btnDelegate"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Action Buttons Row 3: Delete (full width) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDelete"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:text="Delete"
            android:textSize="13sp"
            android:textColor="#DC2626"
            app:cornerRadius="12dp"
            app:icon="@android:drawable/ic_menu_delete"
            app:iconTint="#DC2626"
            app:iconGravity="textStart"
            app:iconPadding="4dp"
            app:strokeColor="#DC2626"
            app:strokeWidth="1dp"
            app:layout_constraintTop_toBottomOf="@+id/btnDelegate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
