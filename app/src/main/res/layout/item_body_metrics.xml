<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    app:strokeWidth="1dp"
    app:strokeColor="#333333"
    app:cardBackgroundColor="#0D0D0D">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Metrics Icon -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="44dp"
            android:layout_height="44dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#1A1A1A"
            android:layout_marginEnd="14dp">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@android:drawable/ic_menu_view"
                android:contentDescription="Metrics"
                android:tint="#FFFFFF"
                android:layout_gravity="center" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Date and BMI Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Date"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:letterSpacing="0.01" />

                <!-- BMI Badge -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#1A1A1A"
                    app:strokeWidth="1dp"
                    app:strokeColor="#333333">

                    <TextView
                        android:id="@+id/tvBMI"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BMI: --"
                        android:textSize="11sp"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:letterSpacing="0.02"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="4dp" />
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- Weight and Body Fat Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp">

                <TextView
                    android:id="@+id/tvWeight"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Weight: -- kg"
                    android:textSize="13sp"
                    android:textColor="#999999"
                    android:fontFamily="sans-serif-light" />

                <TextView
                    android:id="@+id/tvBodyFat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Body Fat: --%"
                    android:textSize="13sp"
                    android:textColor="#999999"
                    android:fontFamily="sans-serif-light" />
            </LinearLayout>

            <!-- Measurements -->
            <TextView
                android:id="@+id/tvMeasurements"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chest --, Waist --, Hips --"
                android:textSize="12sp"
                android:textColor="#666666"
                android:fontFamily="sans-serif-light"
                android:layout_marginTop="4dp"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- Delete Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDelete"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Delete"
                android:textSize="12sp"
                android:textColor="#DC2626"
                app:cornerRadius="10dp"
                app:strokeWidth="1dp"
                app:strokeColor="#DC2626"
                app:icon="@android:drawable/ic_menu_delete"
                app:iconTint="#DC2626"
                app:iconSize="16dp"
                app:iconGravity="textStart"
                app:iconPadding="4dp"
                android:layout_marginTop="12dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
