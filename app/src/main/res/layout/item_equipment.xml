<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    app:strokeWidth="1dp"
    app:strokeColor="#333333"
    app:cardBackgroundColor="#1A1A1A">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Equipment Icon -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/equipmentIconCard"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#262626"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@android:drawable/ic_menu_compass"
                android:contentDescription="Equipment"
                android:tint="#FFFFFF"
                android:layout_gravity="center" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Equipment Name -->
        <TextView
            android:id="@+id/tvEquipmentName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Equipment Name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:letterSpacing="0.01"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintTop_toTopOf="@+id/equipmentIconCard"
            app:layout_constraintBottom_toBottomOf="@+id/equipmentIconCard"
            app:layout_constraintStart_toEndOf="@+id/equipmentIconCard"
            app:layout_constraintEnd_toStartOf="@+id/cbCompleted"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp" />

        <!-- Completed Checkbox -->
        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/cbCompleted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Done"
            android:textSize="12sp"
            android:textColor="#CCCCCC"
            app:buttonTint="#FFFFFF"
            app:layout_constraintTop_toTopOf="@+id/equipmentIconCard"
            app:layout_constraintBottom_toBottomOf="@+id/equipmentIconCard"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Category Badge -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/categoryBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#262626"
            app:layout_constraintTop_toBottomOf="@+id/equipmentIconCard"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/tvCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category"
                android:textSize="12sp"
                android:textColor="#999999"
                android:letterSpacing="0.02"
                android:paddingHorizontal="10dp"
                android:paddingVertical="6dp" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Delete Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDelete"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Delete"
            android:textSize="12sp"
            android:textColor="#DC2626"
            app:cornerRadius="8dp"
            app:icon="@android:drawable/ic_menu_delete"
            app:iconTint="#DC2626"
            app:iconSize="16dp"
            app:iconGravity="textStart"
            app:iconPadding="4dp"
            app:strokeColor="#DC2626"
            app:strokeWidth="1dp"
            android:minWidth="80dp"
            app:layout_constraintTop_toBottomOf="@+id/equipmentIconCard"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
