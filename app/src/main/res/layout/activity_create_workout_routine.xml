<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:fillViewport="true"
    tools:context=".CreateWorkoutRoutineActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/gradient_header_bw"
            android:padding="28dp"
            android:paddingTop="56dp"
            android:paddingBottom="32dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#1A1A1A"
                    android:layout_marginEnd="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_input_add"
                        android:contentDescription="Create icon"
                        android:tint="#FFFFFF"
                        android:layout_gravity="center" />
                </com.google.android.material.card.MaterialCardView>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Create Workout"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:letterSpacing="0.02" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Build your perfect routine"
                        android:textSize="14sp"
                        android:textColor="#CCCCCC"
                        android:layout_marginTop="4dp"
                        android:fontFamily="sans-serif-light" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Content Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Routine Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Routine Details"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:letterSpacing="0.02"
                android:layout_marginBottom="12dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilRoutineName"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Workout Routine Name"
                app:hintTextColor="#999999"
                app:boxStrokeColor="#333333"
                app:boxStrokeWidth="1dp"
                app:boxCornerRadiusTopStart="14dp"
                app:boxCornerRadiusTopEnd="14dp"
                app:boxCornerRadiusBottomStart="14dp"
                app:boxCornerRadiusBottomEnd="14dp"
                app:boxBackgroundColor="#0D0D0D"
                app:startIconDrawable="@android:drawable/ic_menu_myplaces"
                app:startIconTint="#999999">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etRoutineName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#666666"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Description -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilDescription"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Description"
                app:hintTextColor="#999999"
                app:boxStrokeColor="#333333"
                app:boxStrokeWidth="1dp"
                app:boxCornerRadiusTopStart="14dp"
                app:boxCornerRadiusTopEnd="14dp"
                app:boxCornerRadiusBottomStart="14dp"
                app:boxCornerRadiusBottomEnd="14dp"
                app:boxBackgroundColor="#0D0D0D"
                app:startIconDrawable="@android:drawable/ic_menu_view"
                app:startIconTint="#999999"
                android:layout_marginTop="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:minLines="3"
                    android:maxLines="5"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#666666"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Routine Image Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="#333333"
                app:cardBackgroundColor="#0D0D0D">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="#1A1A1A"
                            android:layout_marginEnd="12dp">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:src="@android:drawable/ic_menu_gallery"
                                android:contentDescription="Image icon"
                                android:tint="#FFFFFF"
                                android:layout_gravity="center" />
                        </com.google.android.material.card.MaterialCardView>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Routine Image"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF"
                                android:letterSpacing="0.01" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Optional - Personalize your routine"
                                android:textSize="12sp"
                                android:textColor="#999999"
                                android:fontFamily="sans-serif-light"
                                android:layout_marginTop="2dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#1A1A1A">

                        <ImageView
                            android:id="@+id/ivRoutineImage"
                            android:layout_width="match_parent"
                            android:layout_height="180dp"
                            android:scaleType="centerCrop"
                            android:background="#1A1A1A"
                            android:contentDescription="Workout routine image"
                            android:visibility="gone" />
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSelectImage"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Select Image"
                        android:textSize="14sp"
                        android:textColor="#FFFFFF"
                        app:backgroundTint="#1A1A1A"
                        app:cornerRadius="12dp"
                        app:elevation="0dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="#333333"
                        app:icon="@android:drawable/ic_menu_gallery"
                        app:iconTint="#FFFFFF"
                        app:iconGravity="textStart"
                        android:layout_marginTop="12dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnRemoveImage"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Remove Image"
                        android:textSize="14sp"
                        android:textColor="#DC2626"
                        app:cornerRadius="12dp"
                        app:strokeColor="#DC2626"
                        app:strokeWidth="1dp"
                        app:icon="@android:drawable/ic_menu_delete"
                        app:iconTint="#DC2626"
                        app:iconGravity="textStart"
                        android:layout_marginTop="8dp"
                        android:visibility="gone"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Exercises Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="#333333"
                app:cardBackgroundColor="#0D0D0D">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="#1A1A1A"
                            android:layout_marginEnd="12dp">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:src="@android:drawable/ic_menu_sort_by_size"
                                android:contentDescription="Exercises icon"
                                android:tint="#FFFFFF"
                                android:layout_gravity="center" />
                        </com.google.android.material.card.MaterialCardView>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Exercises"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF"
                                android:letterSpacing="0.01" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Add sets, reps, and instructions"
                                android:textSize="12sp"
                                android:textColor="#999999"
                                android:fontFamily="sans-serif-light"
                                android:layout_marginTop="2dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvExercises"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnAddExercise"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:text="Add Exercise"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        app:backgroundTint="#FFFFFF"
                        app:cornerRadius="14dp"
                        app:elevation="0dp"
                        app:icon="@android:drawable/ic_input_add"
                        app:iconTint="#000000"
                        android:layout_marginTop="12dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Equipment Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="#333333"
                app:cardBackgroundColor="#0D0D0D">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="#1A1A1A"
                            android:layout_marginEnd="12dp">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:src="@android:drawable/ic_menu_compass"
                                android:contentDescription="Equipment icon"
                                android:tint="#FFFFFF"
                                android:layout_gravity="center" />
                        </com.google.android.material.card.MaterialCardView>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Equipment"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF"
                                android:letterSpacing="0.01" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="List required equipment"
                                android:textSize="12sp"
                                android:textColor="#999999"
                                android:fontFamily="sans-serif-light"
                                android:layout_marginTop="2dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvEquipment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnAddEquipment"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:text="Add Equipment"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        app:backgroundTint="#1A1A1A"
                        app:cornerRadius="14dp"
                        app:elevation="0dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="#333333"
                        app:icon="@android:drawable/ic_input_add"
                        app:iconTint="#FFFFFF"
                        android:layout_marginTop="12dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Location Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="#333333"
                app:cardBackgroundColor="#0D0D0D">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="#1A1A1A"
                            android:layout_marginEnd="12dp">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:src="@android:drawable/ic_menu_mylocation"
                                android:contentDescription="Location icon"
                                android:tint="#FFFFFF"
                                android:layout_gravity="center" />
                        </com.google.android.material.card.MaterialCardView>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Location"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF"
                                android:letterSpacing="0.01" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Optional - Link a gym or spot"
                                android:textSize="12sp"
                                android:textColor="#999999"
                                android:fontFamily="sans-serif-light"
                                android:layout_marginTop="2dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSelectLocation"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:text="Select Location"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        app:backgroundTint="#1A1A1A"
                        app:cornerRadius="14dp"
                        app:elevation="0dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="#333333"
                        app:icon="@android:drawable/ic_menu_mylocation"
                        app:iconTint="#FFFFFF" />

                    <!-- Selected Location Display -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#1A1A1A"
                        android:layout_marginTop="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="14dp"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@android:drawable/ic_menu_compass"
                                android:contentDescription="Location"
                                android:tint="#666666"
                                android:layout_marginEnd="10dp" />

                            <TextView
                                android:id="@+id/tvSelectedLocation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="No location selected"
                                android:textSize="14sp"
                                android:textColor="#999999"
                                android:fontFamily="sans-serif-light" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Save Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSave"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Save Workout Routine"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"
                app:backgroundTint="#FFFFFF"
                app:cornerRadius="14dp"
                app:elevation="0dp"
                app:icon="@android:drawable/ic_menu_save"
                app:iconTint="#000000"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="24dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
