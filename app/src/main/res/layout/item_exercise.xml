<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    app:strokeWidth="1dp"
    app:strokeColor="#333333"
    app:cardBackgroundColor="#1A1A1A">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Exercise Icon -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/exerciseIconCard"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#262626"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@android:drawable/ic_menu_sort_by_size"
                android:contentDescription="Exercise"
                android:tint="#FFFFFF"
                android:layout_gravity="center" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Exercise Name -->
        <TextView
            android:id="@+id/tvExerciseName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Exercise Name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:letterSpacing="0.01"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintTop_toTopOf="@+id/exerciseIconCard"
            app:layout_constraintBottom_toBottomOf="@+id/exerciseIconCard"
            app:layout_constraintStart_toEndOf="@+id/exerciseIconCard"
            app:layout_constraintEnd_toStartOf="@+id/cbCompleted"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp" />

        <!-- Completed Checkbox -->
        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/cbCompleted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Done"
            android:textSize="12sp"
            android:textColor="#CCCCCC"
            app:buttonTint="#FFFFFF"
            app:layout_constraintTop_toTopOf="@+id/exerciseIconCard"
            app:layout_constraintBottom_toBottomOf="@+id/exerciseIconCard"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Sets x Reps Badge -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/setsRepsBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#262626"
            app:layout_constraintTop_toBottomOf="@+id/exerciseIconCard"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/tvSetsReps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 sets x 0 reps"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:letterSpacing="0.02"
                android:paddingHorizontal="10dp"
                android:paddingVertical="6dp" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Instructions -->
        <TextView
            android:id="@+id/tvInstructions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Instructions"
            android:textSize="13sp"
            android:textColor="#999999"
            android:fontFamily="sans-serif-light"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@+id/setsRepsBadge"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp" />

        <!-- Action Buttons -->
        <LinearLayout
            android:id="@+id/actionButtonsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/tvInstructions"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="14dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEdit"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_weight="1"
                android:text="Edit"
                android:textSize="13sp"
                android:textColor="#FFFFFF"
                app:backgroundTint="#262626"
                app:cornerRadius="10dp"
                app:elevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="#333333"
                app:icon="@android:drawable/ic_menu_edit"
                app:iconTint="#FFFFFF"
                app:iconGravity="textStart"
                app:iconPadding="4dp"
                android:layout_marginEnd="6dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDelete"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_weight="1"
                android:text="Delete"
                android:textSize="13sp"
                android:textColor="#DC2626"
                app:cornerRadius="10dp"
                app:icon="@android:drawable/ic_menu_delete"
                app:iconTint="#DC2626"
                app:iconGravity="textStart"
                app:iconPadding="4dp"
                app:strokeColor="#DC2626"
                app:strokeWidth="1dp"
                android:layout_marginStart="6dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
