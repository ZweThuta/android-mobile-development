<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:strokeWidth="0dp"
    app:cardBackgroundColor="@color/card_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Header with gradient background -->
        <View
            android:id="@+id/gradientHeader"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/card_gradient_primary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Exercise Name -->
        <TextView
            android:id="@+id/tvExerciseName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Exercise Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_on_primary"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintTop_toTopOf="@+id/gradientHeader"
            app:layout_constraintStart_toStartOf="@+id/gradientHeader"
            app:layout_constraintEnd_toStartOf="@+id/cbCompleted"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp" />

        <!-- Completed Checkbox -->
        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/cbCompleted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Done"
            android:textColor="@color/text_on_primary"
            app:buttonTint="@color/text_on_primary"
            app:layout_constraintTop_toTopOf="@+id/gradientHeader"
            app:layout_constraintEnd_toEndOf="@+id/gradientHeader"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp" />

        <!-- Sets x Reps -->
        <TextView
            android:id="@+id/tvSetsReps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 sets x 0 reps"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/gradientHeader"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="12dp" />

        <!-- Instructions -->
        <TextView
            android:id="@+id/tvInstructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Instructions"
            android:textSize="13sp"
            android:textColor="@color/text_secondary"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@+id/tvSetsReps"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="6dp" />

        <!-- Action Buttons -->
        <LinearLayout
            android:id="@+id/actionButtonsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/tvInstructions"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEdit"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:text="Edit"
                android:textSize="14sp"
                android:textColor="@color/text_on_primary"
                app:backgroundTint="@color/primary"
                app:cornerRadius="10dp"
                app:elevation="2dp"
                app:icon="@android:drawable/ic_menu_edit"
                app:iconTint="@color/text_on_primary"
                app:iconGravity="textStart"
                app:iconPadding="4dp"
                android:layout_marginEnd="6dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDelete"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:text="Delete"
                android:textSize="14sp"
                android:textColor="@color/error"
                app:cornerRadius="10dp"
                app:icon="@android:drawable/ic_menu_delete"
                app:iconTint="@color/error"
                app:iconGravity="textStart"
                app:iconPadding="4dp"
                app:strokeColor="@color/error"
                app:strokeWidth="1dp"
                android:layout_marginStart="6dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
