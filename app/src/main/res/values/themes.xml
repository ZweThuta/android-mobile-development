<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FitLife" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.FitLife" parent="Base.Theme.FitLife" />

    <!-- Black and White AlertDialog Theme -->
    <style name="AlertDialogTheme" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:background">#0D0D0D</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textColorSecondary">#999999</item>
        <item name="colorPrimary">#FFFFFF</item>
        <item name="colorOnPrimary">#000000</item>
        <item name="materialAlertDialogTitleTextStyle">@style/AlertDialogTitleStyle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/AlertDialogBodyStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/AlertDialogPositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertDialogNegativeButtonStyle</item>
    </style>

    <style name="AlertDialogTitleStyle" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AlertDialogBodyStyle" parent="MaterialAlertDialog.Material3.Body.Text">
        <item name="android:textColor">#CCCCCC</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="AlertDialogPositiveButtonStyle" parent="Widget.Material3.Button">
        <item name="android:textColor">#000000</item>
        <item name="backgroundTint">#FFFFFF</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="AlertDialogNegativeButtonStyle" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">#999999</item>
    </style>
</resources>